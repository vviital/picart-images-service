{
  "extends": "airbnb-base/legacy",
  "parserOptions": {
    "ecmaVersion": 9
  },
  "env": {
    "node": true,
    "mocha": true,
    "es6": true,
    "jest": true
  },
  "rules": {
    "no-process-env": "off",
    "max-len": ["error", {
      "code": 120
    }],
    "no-plusplus": "off",
    "comma-dangle": "off",
    "no-underscore-dangle": ["error", {
      "allow": ["_id"]
      }]
  }
}
